<script>
  function toggleBannerPosition() {
    const banner = document.getElementById('anniv-banner');
    const isNarrow = window.innerWidth < 1100;

    if (isNarrow) {
      banner.style.position = 'static';
      banner.style.margin = '40px auto 0 auto';
      banner.style.top = '';
      banner.style.right = '';
      banner.style.width = '90%';
    } else {
      banner.style.position = 'fixed';
      banner.style.top = '150px';
      banner.style.right = '40px';
      banner.style.margin = '0';
      banner.style.width = '220px';
    }
  }

  window.addEventListener('DOMContentLoaded', toggleBannerPosition);
  window.addEventListener('resize', toggleBannerPosition);
</script>
